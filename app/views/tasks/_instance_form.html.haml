- if not @errors.nil? and not @errors.empty?
  %div{class: "alert alert-danger", role: "alert"}
    %ul
      - @errors.each do |e|
        %li=e
= form_tag task_create_instances_path(@task), class: "form form-horizontal task",
  multipart: true do
  .form-group
    = label_tag :instance_file, 'Data file'
    .controls
      = file_field_tag :instance_file, class: 'control-label'
  = submit_tag 'Upload', class: 'btn btn-primary'

