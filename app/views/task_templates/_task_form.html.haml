- if not @errors.nil? and not @errors.empty?
  %div{class: "alert alert-danger", role: "alert"}
    %ul
      - @errors.each do |e|
        %li=e
= form_tag task_template_create_tasks_path(@task_template), class: "form form-horizontal",
  multipart: true do
  .form-group
    = label_tag :task_file, 'Task file'
    .controls
      = file_field_tag :task_file, class: 'control-label'
  = submit_tag 'Upload', class: 'btn btn-primary'

