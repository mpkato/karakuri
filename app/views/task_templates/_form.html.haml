- disabled = (not edit_enabled)
= simple_form_for @task_template, html: { class: "form-horizontal" } do |f|
  = f.input :label, disabled: disabled
  = f.input :title_template, disabled: disabled
  = f.input :form_template, 
    input_html: {class: 'html-area', rows: 20, disabled: disabled}

  - if edit_enabled
    = f.input :preview_yaml_data, as: :text, 
      input_html: {class: 'yaml-area', rows: 5}
    = render partial: "preview"

    %br
    %hr
    %br

    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), 
      task_templates_path, class: 'btn btn-danger'
