- breadcrumb :task_template, @task_template

- model_class = TaskTemplate
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize

= render partial: "form", locals: { edit_enabled: false }

= link_to t('.edit', default: t("helpers.links.edit")), 
  edit_task_template_path(@task_template), class: 'btn btn-primary'
= link_to t('.destroy', default: t("helpers.links.destroy")), 
  task_template_path(@task_template), method: "delete", 
  data: { confirm: t('.confirm', 
    default: t("helpers.links.confirm", default: 'Are you sure?')) }, 
  class: 'btn btn-danger'

%hr
