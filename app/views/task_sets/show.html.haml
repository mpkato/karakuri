= simple_form_for [@task_set, @assign] do |f|
  = f.input :name, url: users_autocomplete_user_username_path,
    as: :autocomplete
  = f.submit nil, class: 'btn btn-primary'

%ul
  - @task_set.assigns.each do |assign|
    %li
      = assign.user.username
      = link_to 'Delete', assign_path(assign), class: 'btn btn-danger btn-xs',
        method: :delete, data: { confirm: 'Are you sure?' }

%hr

%p
  %b Label:
  = @task_set.label

- keys = @task_set.tasks.first.yaml_data.keys
%table.table
  %thead
    %tr
      %th Title
      - keys.each do |key|
        %th= key
  %tbody
  - @task_set.tasks.each do |task|
    %tr
      %td=link_to task.render(@task_set.task_template.title_template), task_path(task)
      - keys.each do |key|
        %td= task.yaml_data[key]

= link_to 'Edit', edit_task_set_path(@task_set)
\|
= link_to 'Back', task_template_path(@task_set.task_template)
